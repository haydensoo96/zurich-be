{
  "compilerOptions": {
    "module": "ESNext", // Ensure this is set to 'ESNext' or 'ES6'
    "moduleResolution": "node", // This helps Node.js resolve modules
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
